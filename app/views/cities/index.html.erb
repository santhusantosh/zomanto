<div class =  "container">
  <div class="page-header">
    <p id="notice"><%= notice %></p>

    <h1>Listing Cities</h1>
</div>
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td><%= city.name %></td>
            <td><%= link_to 'Show', city,class:'btn ' %></td>
            <td><%= link_to 'Edit', edit_city_path(city),class:'btn btn-success' %></td>
            <td><%= link_to 'Destroy', city, method: :delete,class:'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>



    <%= link_to 'New City', new_city_path,class: 'btn btn-info' %>
</div>